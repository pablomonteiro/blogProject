<html>
	<body>
		<h1>List All the Articles</h1>
		<%= link_to 'Home', controller: 'welcome' %>
		<%= link_to 'New Article', new_article_path %>
		<table>
			<tr>
				<th>Title</th>
				<th>Text</th>
			</tr>
			<!-- <% %> It's to write Ruby code, but don`t show the result value. -->
			<% @articles.each do |article| %>
				<tr>
					<!-- <%= %> It's to write Ruby code and show the result value. -->
					<td><%= article.title %></td>
					<td><%= article.text %></td>
					<td><%= link_to 'Show', article_path(article) %></td>
				</tr>
			<% end %>
		</table>
	</body>
</html>